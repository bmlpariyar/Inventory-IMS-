<section class="h-screen bg-gray-100">
  <div class="w-auto h-full p-10">
    <div class="g-6 flex h-full flex-wrap items-center justify-center lg:justify-between">
      <div class=" flex flex-col items-center justify-center mb-12 md:mb-0 md:w-8/12 lg:w-6/12">
        <%= image_tag "logo2.png", class:"w-96 h-auto" %>
        <h1 class="text-center mt-5  text-5xl font-semibold text-gray-800">Complete Inventory Solution</h1>
      </div>
      <div class="md:w-8/12 lg:ml-6 lg:w-5/12 border border-gray-200 py-10 shadow-md flex items-center justify-center">
          <%= form_for(resource, as: resource_name, html: { class:"w-full max-w-sm"}, url: session_path(resource_name)) do |f| %>
          <!-- Email input -->
          <div class="relative mb-6">
            <%= f.label :email, class:"text-xl text-gray-600" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:" mt-2 border border-gray-400 rounded-md min-h-[auto] w-full px-3 py-2 shadow-md focus:outline-none focus:ring-2 focus:ring-blue-400" %>
            
          </div>
          <!-- Password input -->
          <div class="relative mb-6">
            <%= f.label :password, class:"text-gray-600 text-xl " %><br />
            <%= f.password_field :password, autocomplete: "current-password", class:"mt-2 border border-gray-400 rounded-md min-h-[auto] w-full px-3 py-2 shadow-md focus:outline-none focus:ring-2 focus:ring-blue-400" %>
          </div>
          
          <div class="mb-6 flex items-center justify-between">
          <% if devise_mapping.rememberable? %>
            <div class="mb-[0.125rem] block min-h-[1.5rem]">
              <%= f.check_box :remember_me, class:" cursor-pointer form-checkbox h-4 w-4 text-blue-600" %>
              <%= f.label :remember_me, class:"cursor-pointer pl-1" %>
            </div>
            <% end %>
            <%= link_to "Forget Password?", new_user_password_path, class:"text-blue-500 hover:text-blue-700 focus:text-blue-800 focus:ring-2 focus:rounded-sm focus:p-1  focus:outline-none focus:ring-blue-500" %>
          </div>

          <!-- Submit button -->
          <%= f.submit "Log in", class:"cursor-pointer inline-block w-full rounded bg-blue-500 px-7 pt-3 pb-2.5 text-sm font-medium uppercase leading-normal text-white" %>

          <div class="my-4 flex items-center before:mt-0.5 before:flex-1 before:border-t before:border-neutral-300 after:mt-0.5 after:flex-1 after:border-t after:border-neutral-300">
            <p class="mx-4 mb-0 text-center font-semibold">OR</p>
          </div>

          <a class="cursor-pointer bg-blue-700 mb-3 flex w-full items-center justify-center rounded bg-primary px-7 pt-3 pb-2.5 text-center text-sm font-medium uppercase leading-normal text-white shadow-[0_4px_9px_-4px_#3b71ca] transition duration-150 ease-in-out hover:bg-primary-600 hover:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.3),0_4px_18px_0_rgba(59,113,202,0.2)] focus:bg-primary-600 focus:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.3),0_4px_18px_0_rgba(59,113,202,0.2)] focus:outline-none focus:ring-0 active:bg-primary-700 active:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.3),0_4px_18px_0_rgba(59,113,202,0.2)]"><i class="fa-brands fa-facebook-f mr-2"></i>Continue with Facebook</a>
          <a class="bg-cyan-500 mb-3 flex w-full items-center justify-center rounded bg-info px-7 pt-3 pb-2.5 text-center text-sm font-medium uppercase leading-normal text-white shadow-[0_4px_9px_-4px_#54b4d3] transition duration-150 ease-in-out hover:shadow-[0_8px_9px_-4px_rgba(84,180,211,0.3),0_4px_18px_0_rgba(84,180,211,0.2)] focus:bg-info-600 focus:shadow-[0_8px_9px_-4px_rgba(84,180,211,0.3),0_4px_18px_0_rgba(84,180,211,0.2)] focus:outline-none focus:ring-0 active:bg-info-700 active:shadow-[0_8px_9px_-4px_rgba(84,180,211,0.3),0_4px_18px_0_rgba(84,180,211,0.2)]" href="#!"><i class="fa-brands fa-twitter mr-2"></i>Continue with Twitter</a>
        <% end %>
      </div>
    </div>
  </div>
</section>