<p style="color: green"><%= notice %></p>

<div class="w-full absolute">
  <h1 class=" bg-slate-300 w-[81%] absolute py-4 mt-4 rounded-md font-bold text-3xl px-4">Suppliers</h1>

  <div id="suppliers" class="mt-24 px-4 mb-3">
    <% @suppliers.each do |supplier| %>
      <%= render supplier %>
      <p class="my-4">
        <%= link_to "Show", supplier, class:" bg-yellow-200 px-3 py-2 rounded-md " %>
      </p>
    <% end %>
  </div>
  <div class="mt-3 absolute ml-4">
  <%= link_to "New supplier", new_supplier_path, class:"bg-blue-200 px-3 py-2 rounded-md" %>
  </div>
</div>
